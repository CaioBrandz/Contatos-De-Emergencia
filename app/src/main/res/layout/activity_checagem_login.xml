<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:elevation="2dp"
    tools:context=".main.activities.ChecagemLogin_Activity">


    <TextView
        android:id="@+id/tvMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Bem vindo"
        android:textAlignment="center"
        android:textColor="#1e3799"
        android:textColorLink="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edT_Login"
        android:layout_width="271dp"
        android:layout_height="40dp"

        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:ems="10"
        android:hint=" Login"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textColor="#FF5722"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMensagem" />

    <EditText
        android:id="@+id/edt_Pass"
        android:layout_width="271dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:ems="10"
        android:hint=" Senha"
        android:inputType="text"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textColor="#FF5722"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edT_Login" />

    <Button
        android:id="@+id/btLogar"
        android:layout_width="271dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="#1e3799"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_Pass" />

    <Button
        android:id="@+id/btNovo"
        android:layout_width="126dp"
        android:layout_height="49dp"
        android:background="#55FCD3C6"
        android:text="Novo"
        android:textColor="#1e3799"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvEsqueceuSenha"
        app:layout_constraintStart_toStartOf="@+id/btLogar" />

    <TextView
        android:id="@+id/tvEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="54dp"
        android:autoLink="all"
        android:linksClickable="false"
        android:selectAllOnFocus="false"
        android:text="Esqueceu a senha?"
        android:textColor="#1e3799"
        android:textColorLink="#1e3799"
        app:layout_constraintStart_toEndOf="@+id/btNovo"
        app:layout_constraintTop_toBottomOf="@+id/btLogar" />


</androidx.constraintlayout.widget.ConstraintLayout>